@model Unique.Models.Member


@{

    String Pwd = ViewBag.Pwd;


}

<style>

    .form-control {
        text-transform: lowercase;
    }

</style>

<div class="main">
    <section class="module bg-dark-30" data-background="assets/images/section-4.jpg" style="background-color:gray;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                </div>
            </div>
        </div>

    </section>

    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 col-sm-offset-1 mb-sm-40">
                    <h4 class="font-alt">비밀번호 찾기</h4>

                    @if (@Pwd != null)
                    {

                        <p style="color:red;">찾는 사용자의 비밀번호는 @Pwd 입니다. </p>

                    }


                    <hr class="divider-w mb-10">
                    <form class="form-horizontal" method="post" asp-controller="Member" asp-action="SearchPwd">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="userId" placeholder="사용자 아이디 입력" />
                            <span class="text-danger" asp-validation-for="userId"></span>
                        </div>



                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="email" placeholder="사용자 이메일 입력" />
                            <span class="text-danger" asp-validation-for="email"></span>
                        </div>
                        <div class="form-group">

                            <button class="btn btn-round btn-b">비밀번호 찾기</button>
                    </form>



                </div>
                <div class="form-group">
                    <a href="/Member/SearchUserId">Forgot Id?</a>&nbsp&nbsp;

                    <a href="/Member/Login">Login?</a>
                </div>

            </div>

        </div>
</div>
    </section>
