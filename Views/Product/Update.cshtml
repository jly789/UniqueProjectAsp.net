                    <div class="col-sm-8">
                        <input type="hidden" class="form-control" name="productId" id="productId" value="@Model.productId" placeholder="@Model.productId"></input>
                        <button type="submit" class="form-control" id="delete" style="color:white;
                                    background-color:black; width:615px;">
