                                <input type="hidden" class="form-control" name="productImagePath" id="productImagePath" value="@Model.productImagePath" placeholder="@Model.productImagePath"></input>
                                <input type="hidden" class="form-control" name="productCategoryName" id="productCategoryName" value="@Model.productCategoryName" placeholder="@Model.productCategoryName"></input>
                                <input type="hidden" class="form-control" name="memberId" id="memberId" value="@Model.memberId" placeholder="@Model.memberId"></input>
                                <input type="hidden" class="form-control" name="categoryId" id="categoryId" value="@Model.categoryId" placeholder="@Model.categoryId"></input>

                                <input type="text" class="form-control" name="productName" id="productName" value="@Model.productName" placeholder="@Model.productName"></input>

                        </div>
                    </div>
                    <div class="row">
                    <div class="form-group">
                        <label>가격</label>
                                <input type="text" class="form-control" name="productPrice" id="productPrice" value="@Model.productPrice" placeholder="@Model.productPrice"></input>
                    </div>

                            <div class="row">
                                <div class="form-group">
                        
