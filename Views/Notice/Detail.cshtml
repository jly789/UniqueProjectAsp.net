@model Unique.Models.Notice

@{
    Layout = "_Layout";


}





<style>

    .form-control {
        text-transform: lowercase;
    }

</style>

<div class="main">
    <section class="module bg-dark-30" data-background="assets/images/section-4.jpg" style="background-color:gray;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                </div>
            </div>
        </div>

    </section>

    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 mb-sm-40">

                    <div class="col-sm-10">
                        <h4 class="font-alt">Notice</h4>
                        <hr class="divider-w mb-10">
                        <form class="form-horizontal" method="get" asp-controller="Notice" asp-action="Update"
                              enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="noticeId" value="@Model.noticeId" placeholder="제목"
                                       style="width:500px;" />
                                <input type="text" class="form-control" asp-for="noticeTitle" value="@Model.noticeTitle" placeholder="제목"
                                       style="width:500px; background-color:white;" readonly />
                             

                                <input type="hidden" class="form-control" asp-for="memberId" value="@Model.memberId" />


                            </div>

                            <div class="form-group">
                                <textarea style="width:700px; height:300px;" asp-for="noticeContent" readonly>@Model.noticeContent</textarea>
                                <br /></br>
                               

                            </div>


                            <br /></br>
                              @if (Context.Session.GetInt32("memberId") == 1)
                        {

                            <div class="form-group">
                                <button class="btn btn-block btn-round btn-b" id="register" style="width:200px; margin-left:250px;">Update</button>
                            </div>
                        }
                        </form>
                    </div>
                </div>
            </div>
    </section>

    @section scripts {



        <script>

            $('#register').click(function () {

                return true;
            });


        </script>

    }





