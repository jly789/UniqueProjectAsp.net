@model Unique.Models.Notice

@{
    Layout = "_Layout";







}





<style>

    .form-control {
        text-transform: lowercase;
    }

</style>

<div class="main">
    <section class="module bg-dark-30" data-background="assets/images/section-4.jpg" style="background-color:gray;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                </div>
            </div>
        </div>

    </section>

    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 mb-sm-40">

                    <div class="col-sm-10">
                        <h4 class="font-alt">Notice Update</h4>
                      
                        <hr class="divider-w mb-10">
                        <form class="form-horizontal" method="post" asp-controller="Notice" asp-action="Update"
                              enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="noticeId" value="@Model.noticeId" placeholder="제목"
                                       style="width:500px;" />
                                <input type="text" class="form-control" asp-for="noticeTitle" value="@Model.noticeTitle" placeholder="제목"
                                       style="width:500px;" />
                                <span class="text-danger" asp-validation-for="noticeTitle"></span>

                                <input type="hidden" class="form-control" asp-for="memberId" value="@Model.memberId" />
                               
                               
                            </div>

                            <div class="form-group">
                                <textarea style="width:700px; height:300px;" asp-for="noticeContent">@Model.noticeContent</textarea>
                                <br />
                                <span class="text-danger" asp-validation-for="noticeContent"></span>
                             


                            </div>






                            @*   <div class="form-group">
                            <input type="file" class="form-control" name="file" id="file" placeholder="파일 설정" style="width:200px;" />


                            </div> *@


                            <br /></br>


                            <div class="form-group">
                                <button class="btn btn-block btn-round btn-b" id="update" style="width:200px; margin-left:250px;">Update</button>
                             
                            </div>

                        </form>

                        <form class="form-horizontal" method="post" asp-controller="Notice" asp-action="Delete">
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="noticeId" value="@Model.noticeId" 
                                       style="width:500px;" />
                                <button class="btn btn-block btn-round btn-b" id="delete" style="width:200px; margin-left:250px;">Delete</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>

