@{
    Layout = "_Layout";

}

<div class="main">
    <section class="module bg-dark-30" data-background="assets/images/section-4.jpg" style="background-color:gray;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                </div>
            </div>
        </div>

    </section>

</div>


<div class="main">
    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h1 class="module-title font-alt">MY ORDER</h1>
                </div>
            </div>
            <hr class="divider-w pt-20">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-border checkout-table">
                        <tbody>



                            <tr>
                                <th class="hidden-xs">Item</th>
                                <th>ProductName</th>
                                <th class="hidden-xs">Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>OrderStatus</th>
                                <th>Cancel</th>
                            </tr>




                            @foreach (var order in Model)
                            {

                                <tr style="text-align:center; background-color:white;">
                                    <td class="hidden-xs"><a href="#"><img src="~/images/upload/@order.productImage" alt="Accessories Pack" /></a></td>
                                    <td>
                                        <br></br>
                                        <h5 class="product-title font-alt">@order.productName</h5>
                                    </td>
                                    <td class="hidden-xs">
                                        <br></br>
                                        <h5 class="product-title font-alt" id="price">@order.price 원</h5>
                                    </td>
                                    <td>
                                        <br></br>
                                        <input type="hidden" name="quantity" id="quantity" value="@order.orderQuantity" disabled style="background-color:white;" />
                                        <p>@order.orderQuantity</p>
                                    </td>



                                    <td>
                                        <br></br>
                                        <h5 class="product-title font-alt" id="totalPrice">@order.totalPrice 원</h5>
                                    </td>

                                    @if (order.orderStatus == "주문취소")
                                    {
                                    <td>
                                        <br></br>
                                     
                                        <h5 class="product-title font-alt" style="color:red;" id="totalPrice">@order.orderStatus</h5>
                                           
                                    </td>
                                     }
                                    <td>
                                        <br></br>

                                        <h5 class="product-title font-alt" style="color:black;" id="totalPrice">@order.orderStatus</h5>

                                    </td>


                                    @if (order.orderStatus == "결제완료") {
                                    <td class="pr-remove"> <br></br><a id="delete" href="/Order/OrderDelete?orderId= @order.orderId" title="Remove"><i class="fa fa-times"></i></a></td>

                                    }
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" type="hidden" id="" name="" placeholder="Coupon code" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                    </div>
                </div>
                <div class="col-sm-3 col-sm-offset-3">
                    <div class="form-group">
                      
                    </div>
                </div>
            </div>
            <hr class="divider-w">
            <div class="row mt-70">
                <div class="col-sm-5 col-sm-offset-7">
                    <div class="shop-Cart-totalbox">
                    
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section scripts {

        <script>



            $('#delete').click(function () {

                if (!confirm("정말 주문취소 하시겠습니까?\n확인(예) 또는 취소(아니오)를 선택해주세요.")) {
                    return false; //아니오 버튼 클릭 시 이벤트
                } else
                    alert("주문취소 완료되었습니다");
                    return true;
            });


        </script>
    }
